@page "/teacher-dashboard"
@using LMS.Shared.DTOs
@inject NavigationManager NavigationManager
@inject ITeacherService TeacherService

<h2>Teacher Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Courses</h3>
            @if (courses == null)
            {
                <p>Loading...</p>
            }
            else
            {
                @foreach (var course in courses)
                {
                    <div class="card mb-2" @onclick="() => SelectCourse(course.CourseId)">
                        <div class="card-body">
                            @course.Name
                        </div>
                    </div>
                }
            }
            <button class="btn btn-primary" @onclick="CreateNewCourse">Create New Course</button>
        </div>

        <div class="col-md-4">
            <h3>Modules</h3>
            @if (selectedCourse != null)
            {
                @if (modules == null)
                {
                    <p>Loading...</p>
                }
                else
                {
                    @foreach (var module in modules)
                    {
                        <div class="card mb-2" @onclick="() => SelectModule(module.ModuleId)">
                            <div class="card-body">
                                @module.Name
                            </div>
                        </div>
                    }
                }
                <button class="btn btn-primary" @onclick="CreateNewModule">Create New Module</button>
            }
            else
            {
                <p>Select a course to view its modules</p>
            }
        </div>

        <div class="col-md-4">
            <h3>Activities</h3>
            @if (selectedModule != null)
            {
                @if (activities == null)
                {
                    <p>Loading...</p>
                }
                else
                {
                    @foreach (var activity in activities)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                @activity.Name
                            </div>
                        </div>
                    }
                }
                <button class="btn btn-primary" @onclick="CreateNewActivity">Create New Activity</button>
            }
            else
            {
                <p>Select a module to view its activities</p>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>User Management</h3>
            <button class="btn btn-primary me-2" @onclick="CreateNewUser">Create New User</button>
            <button class="btn btn-secondary" @onclick="ViewAllUsers">View All Users</button>
        </div>
    </div>
</div>

